<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-inputs">

      <%= f.input :username, autofocus: true , disabled: true, hint: 'You cannot change your username.'%>
      <%= f.input :email, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.input :password, class: "form-control", hint: 'Leave this field blank if you do not wish to change your password' %>
      <%= f.input :password_confirmation, class: "form-control", autocomplete: "off" %>
      <%= f.input :current_password, class: "form-control", autocomplete: "off", hint: 'We need your current password to confirm your changes' %> <br />
      <%= f.submit "Update", class: "btn btn-primary"  %>
      </div>
    </div>
  <% end %>
</div>

<div class="panel-footer">
  <h3>Cancel my account</h3>

  <p>Not ready to give back to society yet? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary"  %></p>

  <%= link_to "Back", :back %>
</div>
