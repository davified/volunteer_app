

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="panel panel-default">
    <div class="panel-body">
      <h2>Sign up</h2>
      <%= f.input :username, autofocus: true %>
      <%= f.input :email %>
      <%= f.input :password, hint: 'Your password should contain a minimum of 6 characters'  %>
        <% if @minimum_password_length %>

        <% end %>
      <%= f.input :password_confirmation, class: "form-control", autocomplete: "off" %>
      <%= f.submit "Sign me up!", class: "btn btn-primary"  %>
      <% end %>
    Already a user? <%= render "devise/shared/links" %>
    </div>
  </div>
