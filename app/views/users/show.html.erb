<div class="row user-profile-container">
  <div class="col-md-3">
    <div class="profile-pic">
      <%= image_tag @user.images, class: "profile-pic" %>
    </div>
  </div>
  <div class="page-header col-md-3">
    <h1><%= @user.username %> </h1>
  </div>

  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <div>
      <h3>Skills</h3>
      <%= @user.skills %>
    </div>

    <div>
      <h3>Volunteering opportunities that you may be interested in</h3>
      <%= @tasks %>
    </div>

    <div>
      <h3>Your contributions</h3>
      <%= @tasks %>
      <%= image_tag 'dashboard-screenshot.png' %>
    </div>
  </div>
</div>
